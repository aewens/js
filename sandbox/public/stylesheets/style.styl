@import "nib"
@import url("http://fonts.googleapis.com/css?family=Quicksand")
@import url("http://fonts.googleapis.com/css?family=Open+Sans:700,400")

global-reset()

primary = #faf9f0
sgrey   = #708090

html, body
    font-family "Open Sans", sans-serif
    font-size 14px
    background #fff
    color #000
    z-index 1
    // transform translate3d(0)
    width 100%
    height 100%
    position relative
    &.color
        background primary
        color #444

header
    font-family "Quicksand"
    padding 15px 10px
    text-align center
    background #000
    border-bottom 1px solid #000
    text-shadow 0 -1px 0 #000
    h1
        font-size 28px
        color #fff
    p
        font-size 14px
        color #fff
    &.color
        background sgrey
        border-bottom 1px solid darken(sgrey, 30%)
        text-shadow 0 -1px 0 darken(sgrey, 30%)
        p
            color darken(#fff, 15%)

.container
    margin 50px auto
    overflow hidden

.main-content
    float left
    width 70%
    p
        margin-bottom 20px

.ng-block, article
    padding 10px
    margin-bottom 10px
    border 1px solid #ccc
    border-radius 2px 2px 0 0
    border-radius 3px
    box-shadow inset 0 0 0 3px rgba(sgrey, 0.1), 0 3px 0 -2px rgba(0,0,0,0.1)
    *:not(:first-child)
        margin-top 10px
    .ng-output
        display inline-block
        background sgrey
        color darken(#fff, 30%)
        padding 4px 6px
        border-radius 4px
    h2
        font-size 18px
    h3
        padding-left 14px
    &.color
        background lighten(primary, 25%)

.sidebar
    float left
    width 30%
    .widget
        border-radius 3px
        border 1px solid #ccc
        margin-left 20px
        background #fff
        box-shadow inset 0 0 0 3px rgba(sgrey, 0.1), 0 3px 0 -2px rgba(0,0,0,0.1)
        h1
            font-family "Quicksand"
            margin 13px 10px 4px 10px
            padding-bottom 10px
            border-bottom 1px dotted #ddd
            border-radius 2px 2px 0 0
        p
            font-size 13px
            padding 5px 10px 0px
            margin-bottom 10px
        &.color
            background lighten(primary, 25%)
            
canvas
    padding 10px
    margin-bottom 10px
    border 1px solid #ccc
    border-radius 2px 2px 0 0
    border-radius 3px
    box-shadow inset 0 0 0 3px rgba(sgrey, 0.1), 0 3px 0 -2px rgba(0,0,0,0.1)

p
    line-height 1.8
    
a
    color #000
    text-decoration underline
    font-weight bold
    &:hover, &:focus
        color sgrey
        text-decoration none
    &:visited
        color sgrey
    &:active
        color darken(sgrey, 50%)

footer
    margin 50px auto
    border-top 1px dotted #ccc
    padding-top 5px
    font-size 13px
    position relative
    z-index 1
    span
        padding-top 2px
    span.copyright
        position absolute
        left 0
    span.engine
        position absolute
        right 0

.backdrop
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    background #000
    z-index 9000
    visibility hidden
    opacity 0
    &.on
        visibility visible
        opacity 0.9

.popup
    width 300px
    height 200px
    line-height 200px
    background rgba(255,255,255,0.95)
    position fixed
    margin-top -100px
    margin-left -150px
    top 50%
    left 50%
    text-align center
    border-radius 10px
    box-shadow  0 0 10px 1px rgba(112,128,144,0.5)
    opacity 0
    visibility hidden
    cursor default
    // transform scale(1.1)
    pointer-event none
    z-index 9001
    &.on
        opacity 1
        visibility visible
        // transform scale(1)
        cursor pointer
        pointer-event auto
    p
        padding 15px 0 0

.app.on
    // -webkit-filter blur(5px) grayscale(50%)
    // transform scale(0.9)
    pointer-event none
    user-select none
    cursor default

.popup, .app
    transition opacity 2s ease //, -webkit-filter 0.2s ease

.button, .theme
    background #000
    border 1px solid darken(sgrey, 30%)
    border-radius 3px
    color #fff
    padding 4px 6px
    cursor pointer
    &:hover
        box-shadow 0 0 3px rgba(0,0,0,0.5)
        color darken(#fff, 5%)
    &.on
        color darken(#fff, 30%)
        cursor default
    &.default:after
        content "Monochrome"
    &.monochrome:after
        content "Default"
    &.color
        background sgrey
        
.theme
    margin-left 5px

.off
    display none

.emphasis
    font-weight bold
    color #f0f

.hover
    cursor pointer
