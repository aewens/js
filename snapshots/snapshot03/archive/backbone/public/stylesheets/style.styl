@import "nib"
// @import url("http://fonts.googleapis.com/css?family=Quicksand")
@import url("http://fonts.googleapis.com/css?family=Open+Sans:700,400")

// global-reset()

xblue   = #0c5a9f
xyellow = #ffb300
sgrey   = #708090

html, body
    font-size 90%
    font-family "Open Sans", sans-serif
    line-height 1.5
    text-align left
    background #fff
    color #000
    position relative
    width 100%
    
a
    text-decoration none
    padding 2px 4px
    &:link, &:visited
        color xblue
    &:hover, &:active
        color #fff
        background xblue
        text-decoration none
        border-radius 5px





