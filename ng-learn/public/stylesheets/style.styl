@import "nib"
@import url("http://fonts.googleapis.com/css?family=Quicksand")
@import url("http://fonts.googleapis.com/css?family=Open+Sans")

global-reset()

primary = #faf9f0
sgrey   = #708090

html, body
    font-family "Open Sans", sans-serif
    font-size 14px
    background primary
    color #444
    z-index 1
    transform translate3d(0)
    width 100%
    height 100%
    position relative

header
    font-family "Quicksand"
    padding 15px 10px
    text-align center
    background sgrey
    border-bottom 1px solid darken(sgrey, 30%)
    text-shadow 0 -1px 0 darken(sgrey, 30%)
    h1
        font-size 28px
        color #fff
    p
        font-size 14px
        color darken(#fff, 15%)

.container
    margin 50px auto
    overflow hidden

.main-content
    float left
    width 70%
    p
        margin-bottom 20px

.ng-block
    padding 10px
    border-bottom 1px dotted #ddd
    margin-bottom 10px
    border-radius 2px 2px 0 0
    border-radius 3px
    border 1px solid #ccc
    background lighten(primary, 5%)
    box-shadow inset 0 0 0 3px rgba(sgrey, 0.1), 0 3px 0 -2px rgba(0,0,0,0.1)
    *:not(:first-child)
        margin-top 10px
    span
        display inline-block
        background sgrey
        color lighten(#fff, 0.3)
        padding 4px 6px
        border-radius 4px
    h3
        padding-left 14px

.sidebar
    float left
    width 30%
    .widget
        border-radius 3px
        border 1px solid #ccc
        margin-left 20px
        background lighten(primary, 5%)
        box-shadow inset 0 0 0 3px rgba(sgrey, 0.1), 0 3px 0 -2px rgba(0,0,0,0.1)
        h1
            font-family "Quicksand"
            margin 13px 10px 4px 10px
            padding-bottom 10px
            border-bottom 1px dotted #ddd
            border-radius 2px 2px 0 0
        p
            font-size 13px
            padding 0 10px
            margin-bottom 10px

p
    line-height 1.8

footer
    margin 50px auto
    border-top 1px dotted #ccc
    padding-top 5px
    font-size 13px
    position relative
    z-index 1
    span
        padding-top 2px
    span.copyright
        position absolute
        left 0
    span.engine
        position absolute
        right 0

.popup
    width 300px
    height 200px
    line-height 200px
    background rgba(255,255,255,0.95)
    position fixed
    margin-top -100px
    margin-left -150px
    top 50%
    left 50%
    text-align center
    border-radius 10px
    box-shadow  0 0 10px 1px rgba(112,128,144,0.5)
    opacity 0
    visibility: hidden
    cursor default
    transform scale(1.5)
    pointer-event none
    z-index 9001
    &.on
        opacity 1
        visibility: visible
        transform scale(1)
        cursor pointer
        pointer-event auto
    p
        padding 15px 0 0

.app.on
    -webkit-filter blur(5px) grayscale(50%)
    transform scale(0.8)
    pointer-event none
    user-select none
    cursor default

.popup, .app
    transition transform 0.4s ease, -webkit-filter 0s ease 0.2s

.btn
    background sgrey
    border 1px solid darken(sgrey, 30%)
    border-radius 3px
    color lighten(#fff, 0.3)
    padding 4px 6px
    cursor pointer
    &:hover
        box-shadow 0 0 3px rgba(0,0,0,0.5)
    &.on
        color #fff
        cursor default

.off
    display none

















